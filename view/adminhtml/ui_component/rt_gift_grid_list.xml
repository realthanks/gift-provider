<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">rt_gift_grid_list.grid_gift_list_data_source</item>
            <item name="deps" xsi:type="string">rt_gift_grid_list.grid_gift_list_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">gift_columns</item>
    </argument>
    <dataSource name="grid_gift_list_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">grid_gift_list_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
                <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.gift_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.gift_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
        </filters>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">rt_gift_grid_list.rt_gift_grid_list.gift_columns.ids</item>
                </item>
            </argument>
        </paging>
    </container>
    <columns name="gift_columns">
        <selectionsColumn name="ids">
           <argument name="data" xsi:type="array">
               <item name="config" xsi:type="array">
                   <item name="indexField" xsi:type="string">entity_id</item>
                   <item name="sorting" xsi:type="string">desc</item>
                   <item name="sortOrder" xsi:type="number">0</item>
               </item>
           </argument>
       </selectionsColumn>
        <column name="entity_id" sortOrder="5">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="image_url"
                class="WiserBrand\RealThanks\Ui\Component\Gift\Listing\Column\Thumbnail"
                component="Magento_Ui/js/grid/columns/thumbnail"
                sortOrder="10">
            <settings>
                <altField>image</altField>
                <hasPreview>0</hasPreview>
                <label translate="true">Image</label>
            </settings>
        </column>
        <column name="name" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="description" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Description</label>
            </settings>
        </column>
        <column name="cost" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Cost</label>
            </settings>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select" sortOrder="70">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Active</label>
            </settings>
        </column>
        <column name="creation_time"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="50">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        <column name="update_time"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="60">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Modified</label>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="WiserBrand\RealThanks\Ui\Component\Gift\Listing\Action\SendGift"
                       sortOrder="80">
                <settings>
                    <label translate="true">RealThanks</label>
                    <indexField>entity_id</indexField>
                </settings>
        </actionsColumn>
    </columns>
    <container name="modalContainer">
        <modal name="send_gift_modal">
            <settings>
                <options>
                    <option name="title" xsi:type="string" translate="true">Send gift</option>
                </options>
            </settings>
            <insertForm name="send_gift_form_loader" sortOrder="2010" component="WiserBrand_RealThanks/js/form/components/insert-send-gift-form">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="giftModalProvider" xsi:type="string">${ $.parentName }</item>
                        <!--                    <item name="ownerComponent" xsi:type="string">ns = customer_form</item>-->
                    </item>
                </argument>
                <settings>
                    <formSubmitType>ajax</formSubmitType>
                    <renderUrl path="mui/index/render">
                        <param name="handle">send_gift_form</param>
                        <param name="buttons">1</param>
                        <param name="form_id">0</param>
                    </renderUrl>
                    <loading>true</loading>
                    <autoRender>true</autoRender>
                    <toolbarContainer>${ $.parentName }</toolbarContainer>
                    <externalProvider>send_gift_form.send_gift_form_data_source</externalProvider>
                    <ns>send_gift_form</ns>
                    <imports>
                    </imports>
                </settings>
            </insertForm>
        </modal>
    </container>
</listing>
